<div class="container">
  <div class="row">
    <div class="col-md-5">
      <div class="panel-heading">
        <h3 class="panel-title">Create New Post</h3>
      </div>

      <div class="panel-body">
        <form class="new-post-form">
            <div class="form-group">
              <input type="text" name="post-title" id="post-title" class="form-control input-sm" placeholder="Enter Title">
            </div>

            <div class="form-group">
              <input type="text" name="post-description" id="post-description" class="form-control input-sm" placeholder="Enter Description">
            </div>

            <button type="submit" class="btn btn-info btn-block">Create</button>

        </form>

      </div>
    </div>
  </div> 
</div>


<script src="/javascript/add-post.js"></script>
